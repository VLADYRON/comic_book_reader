{
	"name": "comic_book_reader",
	"version": "0.1.0",
	"description": "A browser based touch friendly comic book reader",
	"homepage": "https://github.com/workhorsy/comic_book_reader",
	"keywords": [
		"comics"
	],
	"author": "Matthew Brennan Jones <matthew.brennan.jones@gmail.com>",
	"license": "AGPL-3.0",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/workhorsy/comic_book_reader.git"
	},
	"scripts": {
		"test": "eslint src && preact test",
		"start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
		"build": "preact build --template src/index.html",
		"serve": "npm run build && preact serve",
		"dev": "preact watch  --template src/index.html",
		"lint": "eslint src"
	},
	"eslintConfig": {
		"extends": "eslint-config-synacor",
		"rules": {
			"react/self-closing-comp": 0,
			"react/prefer-stateless-function": 0,
			"brace-style": 0,
			"no-console": 0
		},
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		}
	},
	"eslintIgnore": [
		"src/lib/pdf.js",
		"src/lib/pdf.worker.js",
		"src/lib/compatibility.js",
		"src/lib/uncompress.js",
		"src/lib/jszip.js",
		"src/lib/libunrar.js",
		"src/lib/libunrar.js.mem",
		"src/lib/ibuntar.js",
		"src/lib/pica.js"
	],
	"devDependencies": {
		"eslint": "^4.2.0",
		"eslint-config-synacor": "^1.0.1",
		"if-env": "^1.0.0",
		"preact-cli": "^1.3.0"
	},
	"dependencies": {
		"preact": "^8.2.7",
		"preact-compat": "^3.18.0",
		"preact-redux": "^2.0.3",
		"preact-router": "^2.6.0",
		"redux": "^3.7.2"
	}
}
